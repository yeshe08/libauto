<p id="notice"><%= notice %></p>

<h1>Book Docs</h1>

<table>
  <thead>
    <tr>
      <th>Book name</th>
      <th>Pdf doc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_docs.each do |book_doc| %>
      <tr>
        <td><%= book_doc.book_name %></td>
        <td><%= book_doc.pdf_doc %></td>
        <td><%= link_to 'Show', book_doc %></td>
        <td><%= link_to 'Edit', edit_book_doc_path(book_doc) %></td>
        <td><%= link_to 'Destroy', book_doc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book Doc', new_book_doc_path %>
