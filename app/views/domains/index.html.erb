<p id="notice">
  <%= notice %>
</p>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>Domains</h1>
    </div>
  <div class="col-md-2">
      <%if current_user.present?%>
    <%if current_user.role_id == 1%>
  <%= link_to 'Export', domains_domain_export_path, :class=>"btn btn-primary"%>
  <%end%>
  <%end%>
  </div>
  </div>
</div>

<table id="domains" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Domain name</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td>
          <%= domain.domain_name %>
        </td>
        <td>
          <%= link_to 'Show', domain %>
            <%if current_user.present?%>
            <%if current_user.role_id == 1%>
              <%= link_to 'Edit', edit_domain_path(domain) %>
                <%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' } %>
                <%end%>
                <%end%>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>
